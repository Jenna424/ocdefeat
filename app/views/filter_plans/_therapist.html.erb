<%= form_tag("/plans", method: "get") do %>
  <%= select_tag "designer", options_from_collection_for_select(patients, "id", "name"), prompt: "Plan Designer" %>
  <%= select_tag "theme", options_from_collection_for_select(themes, "name", "name"), prompt: "OCD Theme" %>
  <%= select_tag "progress", options_for_select(["Completed", "Not Yet Completed"]), prompt: "Progress Toward Completion" %>
  <%= submit_tag "Filter Plans" %>
<% end %>
