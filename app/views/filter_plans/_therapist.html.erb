<%= form_tag("/plans", method: "get") do %>
  <%= select_tag "designer", options_from_collection_for_select(patients, "id", "name"), prompt: "Plan Designer" %>
  <br><br>
  <%= select_tag "theme", options_from_collection_for_select(themes, "id", "name"), prompt: "OCD Theme" %>
  <br><br>
  <%= select_tag "patient_planning", options_from_collection_for_select(patients, "id", "name"), prompt: "Patient's Preliminary Plans" %>
  <br><br>
  <%= select_tag "patient_progressing", options_from_collection_for_select(patients, "id", "name"), prompt: "Patient's Progress Toward Completion" %>
  <br><br>
  <%= submit_tag "Filter Plans" %>
<% end %>
