<%= form_tag("/obsessions", method: "get") do %>
  <%= select_tag "patient", options_from_collection_for_select(patients, "id", "name"), prompt: "Patient" %>
  <br><br>
  <%= select_tag "distressed", options_from_collection_for_select(patients, "id", "name"), prompt: "Most to Least Distressing Obsessions by Patient" %>
  <br><br>
  <%= select_tag "consumed", options_from_collection_for_select(patients, "id", "name"), prompt: "Patient's Obsessions Ordered by Most to Least Time Taken" %>
  <br><br>
  <%= select_tag "planless", options_from_collection_for_select(patients, "id", "name"), prompt: "Patient's Obsessions Without ERP Plans" %>
  <br><br>
  <%= select_tag "ocd_subset", options_from_collection_for_select(themes, "id", "name"), prompt: "OCD Subset" %>
  <br><br>
  <%= submit_tag "Filter Obsessions" %>
<% end %>
