<%= form_tag("/obsessions", method: "get") do %>
  <%= select_tag "plan_production", options_for_select(["Least to Most ERP Plans", "Most to Least ERP Plans"]), prompt: "Plan Production" %>
  <br><br>
  <%= select_tag "date", options_for_select(["Today", "Old Obsessions"]), prompt: "Date Reported" %>
  <br><br>
  <%= submit_tag "Filter Obsessions" %>
<% end %>
