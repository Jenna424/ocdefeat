<div class="well well-lg">
  <p><em>On <%= updated_on(comment) %>, <%= comment.user_name %> commented:</em></p>

  <p><strong>"<%= comment.content %>"</strong></p>

  <% if policy(comment).edit? %>
    <%= link_to "Edit Comment", edit_comment_path(comment), class: "btn btn-primary btn-sm", role: "button" %>
  <% end %>

  <% if policy(comment).destroy? %>
    <%= link_to "Delete Comment", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: "btn btn-danger btn-sm", role: "button" %>
  <% end %>
</div>
