<%= form_for [obsession, comment] do |f| %>
  <div class="field">
    <%= f.label :content, label_comment %><br>
    <%= f.text_area :content, placeholder: (comment.errors.full_messages_for(:content).first || placefill_comment), class: "form-control" %>
    <small class="form-text text-muted">Please refrain from <%= reassurance_gerunds %> reassurance, as this exacerbates OCD!</small>
  </div>
  <br>
  <div class="actions">
    <%= f.hidden_field :obsession_id, value: obsession.id %>
    <%= f.submit label_submit_btn, class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
