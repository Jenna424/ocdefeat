<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <br>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <br>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <br>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <br>

  <label>Rate the severity of your OCD based on the amount of time you obsess daily:</label>

  <br><br>

  <%= f.radio_button :severity, 'Mild' %>
  <%= f.label :ocd_severity_mild, "Mild (less than 1 hr/day)" %><br>
  <%= f.radio_button :severity, 'Moderate' %>
  <%= f.label :ocd_severity_moderate, "Moderate (1-3 hrs/day)" %><br>
  <%= f.radio_button :severity, 'Severe' %>
  <%= f.label :ocd_severity_severe, "Severe (3-8 hrs/day)" %><br>
  <%= f.radio_button :severity, 'Extreme' %>
  <%= f.label :ocd_severity_extreme, "Extreme (more than 8 hrs/day)" %><br>
  <%= f.radio_button :severity, 'not_applicable' %>
  <%= f.label :ocd_severity_not_applicable, "N/A" %><br>

  <br><br>

  <%= f.label :role_requested, "Request a Role: " %>

  <%= f.select :role_requested, options_for_select(["Patient", "Therapist", "Admin"]), include_blank: true %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
