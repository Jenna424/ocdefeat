<h1>History of Obsessions</h1>

<%= form_tag obsessions_path, method: :get do %>
  <%= label_tag :search, "Search obsessions:" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<div>
  <h3>Filter Obsessions by...</h3>

  <br>

  <%= render partial: filters, locals: { patients: @patients, themes: @themes } %>
</div>

<hr>

<%= display_obsessions(@obsessions) %>
